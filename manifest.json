{
    "manifest_version": 3,
    "name": "Exchange Rate Extension",
    "description": "Exchange rate checker",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "storage",
        "webRequest",
        "webNavigation",
        "https://app.exchangerate-api.com/"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/icon16.png",
            "48": "/images/icon48.png",
            "128": "/images/icon128.png"
        }
    }
}
